---
layout: null
permalink: /events.timeline.json
---

{
    "title": {
        "text": {
            "headline": "StudioRich Events",
            "text": "Live sets, streams, drops & walks"
        }
    },
    "events": [
        {% for e in site.events | sort: 'date' %
        }
    {
            "start_date": {
                "year": {
                    { e.date | date: "%Y" | plus: 0
                    }
                },
                "month": {
                    { e.date | date: "%m" | plus: 0
                    }
                },
                "day": {
                    { e.date | date: "%d" | plus: 0
                    }
                },
                "hour": {
                    { e.date | date: "%H" | plus: 0
                    }
                },
                "minute": {
                    { e.date | date: "%M" | plus: 0
                    }
                }
            }{% if e.end %
            },
            "end_date": {
                "year": {
                    { e.end | date: "%Y" | plus: 0
                    }
                },
                "month": {
                    { e.end | date: "%m" | plus: 0
                    }
                },
                "day": {
                    { e.end | date: "%d" | plus: 0
                    }
                },
                "hour": {
                    { e.end | date: "%H" | plus: 0
                    }
                },
                "minute": {
                    { e.end | date: "%M" | plus: 0
                    }
                }
            }{% endif %
            },
            "text": {
                "headline": {
                    { e.title | jsonify
                    }
                },
                "text": {
                    { (e.description | default: e.excerpt | default: "") | jsonify
                    }
                }
            },
            "media": {
                "url": {
                    { (e.cover | default: "/assets/img/events/default.webp") | absolute_url | jsonify
                    }
                },
                "caption": {
                    { (e.location | default: e.city | default: "") | jsonify
                    }
                }
            },
            "group": {
                { (e.type | default: "event") | jsonify
                }
            },
            "unique_id": {
                { e.url | absolute_url | jsonify
                }
            },
            "background": {
                "color": "rgba(0,0,0,0.25)"
            }
        }{% unless forloop.last %
        },
        {% endunless %
        }
{% endfor %
        }
    ]
}